{
    "name": "portfolio",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "aos": "^2.3.4",
        "bulma": "^0.8.0",
        "classnames": "^2.2.6",
        "node-sass": "^4.13.1",
        "prop-types": "^15.7.2",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-hook-form": "^3.29.4",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.3.0",
        "styled-components": "^5.0.0"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.0",
        "husky": "^4.2.1",
        "lint-staged": "^10.0.4",
        "prettier": "^1.18.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,css}": [
            "prettier --write",
            "./node_modules/.bin/eslint --max-warnings 0",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ],
        "settings": {
            "import/resolver": {
                "node": {
                    "paths": [
                        "src"
                    ]
                }
            }
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
